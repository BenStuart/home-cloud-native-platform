job "traefik" {

  datacenters = ["dc1"]

  group "home-cloud" {

    count = 2

    restart {
      attempts = 3
      delay    = "20s"
      mode     = "delay"
    }

    task "traefik-container" {

      driver = "docker"

      config {
        image = "{{ traefik.image.name }}:{{ traefik.image.tag }}"
        port_map {
          http = "{{ traefik.service.ports.http }}",
          web = 8080
        }
        volumes = [
          "{{ traefik.storage }}/traefik.toml:/etc/traefik/traefik.toml",
          "/var/run/docker.sock:/var/run/docker.sock"
        ]
      }

      service {
        name = "{{ traefik.service.name }}"
        port = "http"
        check {
          type     = "http"
          path     = "/"
          interval = "10s"
          timeout  = "2s"
        }
      }
      
      resources {
        memory = 256
        network {
          port "http" {}
          port "web" {}
        }
      }

    }

  }

}
