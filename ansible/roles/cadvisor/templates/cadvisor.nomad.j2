task "cadvisor" {

  driver = "docker"

  config {
    image = "{{ cadvisor.image.name }}:{{ cadvisor.image.tag }}"
    force_pull = true
    volumes = [
      "/:/rootfs:ro",
      "/var/run:/var/run:rw",
      "/sys:/sys:ro",
      "/var/lib/docker/:/var/lib/docker:ro",
      "/cgroup:/cgroup:ro"
    ]
    port_map {
      http = 8080
    }
  }
}
